<UserControl x:Class="BudgetPlanner.Views.SummaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Overall Summary -->
        <GroupBox Header="Overall Summary" Grid.Row="0" Margin="5">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="Total Income" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalIncome, StringFormat=C}" FontSize="24" Foreground="Green" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="Total Expenses" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalExpenses, StringFormat=C}" FontSize="24" Foreground="Red" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="Net Balance" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding NetBalance, StringFormat=C}" FontSize="24" Foreground="Blue" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Category Breakdown -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Income by Category -->
            <GroupBox Header="Income by Category" Grid.Column="0" Margin="0,0,5,0">
                <DataGrid ItemsSource="{Binding IncomeSummary}" 
                        AutoGenerateColumns="False" 
                        IsReadOnly="True"
                        CanUserAddRows="False"
                        HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*"/>
                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat=C}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- Expenses by Category -->
            <GroupBox Header="Expenses by Category" Grid.Column="1" Margin="5,0,0,0">
                <DataGrid ItemsSource="{Binding ExpenseSummary}" 
                        AutoGenerateColumns="False" 
                        IsReadOnly="True"
                        CanUserAddRows="False"
                        HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*"/>
                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat=C}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
